{
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the schematic",
      "x-prompt": "Name of the schematic",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "description": {
      "type": "string",
      "x-prompt": "Schematic description"
    },
    "version": {
      "type": "string",
      "x-prompt": "Update version"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the schematic.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    }
  }
}
